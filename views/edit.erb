<% @memo.each do |memo| %>
<form action="/memos/<%= h(memo[:id]) %>" method="post">
  <div class="input_wrapper">
    <input type="hidden" name="_method" value="patch">
    <p>
      <label for="title"><input class="title" type="text" name="title" id="title" maxlength="20" value="<%= "#{h(memo[:title])}" %>" required></label>
    </p>
    <p>
      <label for="content"><textarea class="content" name="content" id="content" rows="8" maxlength="100"><%= "#{h(memo[:content])}" %></textarea></label>
    </p>
  </div>
  <div class="button_wrapper">
    <p><input type="submit" value="保存" class="button"></p>
    <p><a href='/memos/<%= memo[:id] %>' class="button">戻る</a></p>
  </div>
<% end %>
</form>
